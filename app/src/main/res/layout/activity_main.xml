<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_main_activity">

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:gravity="end"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/actionLayout"
            android:layout_gravity="center|center_vertical">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/welcomeScreen"
                android:background="@drawable/ic_welcome_screen" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/actionLayout"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="75sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:id="@+id/buttonCamera"
                android:layout_marginLeft="05sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_ar_button"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_weight="1"
                android:id="@+id/buttonMic"
                android:scaleType="fitCenter"
                android:layout_marginRight="05sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_mic_button"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
